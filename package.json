{
  "name": "@univ-lehavre/biblio",
  "description": "Un ensemble d’outils pour fiabiliser les données bibliographiques en TypeScript",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/univ-lehavre/biblio.git"
  },
  "bugs": {
    "url": "https://github.com/univ-lehavre/biblio/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=22.19.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:checked": "turbo run build types:check lint format:check test",
    "types:check": "turbo run types:check",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "changeset": "pnpm dlx @changesets/cli",
    "changeset:version": "pnpm dlx @changesets/cli version",
    "changeset:publish": "pnpm dlx @changesets/cli publish",
    "broadcast": "run-s build:checked changeset:version changeset:publish"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.35.0",
    "@preconstruct/cli": "^2.8.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
